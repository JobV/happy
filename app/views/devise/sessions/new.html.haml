.session-box
  %h1 Sign in
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'ui form' }) do |f|
    = f.error_notification
    .field
      = f.input :email, required: false, autofocus: true, input_html: { class: 'form-control' }
    .field
      = f.input :password, required: false, input_html: { class: 'form-control' }
    -# .field
    -#   = f.input :remember_me, as: :boolean, wrapper_html: { class: 'ui checkbox rmcb' }
    .field= f.button :submit, "Sign in", class: 'ui blue submit button'
  = render "devise/shared/links"
