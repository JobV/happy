.session-box
  %h1 Sign up
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'ui form' }) do |f|
    = f.error_notification
    .field
      = f.input :email, autofocus: true, input_html: { class: 'form-control' }
    .field
      = f.input :password, input_html: { class: 'form-control' }
    .field
      = f.input :password_confirmation, input_html: { class: 'form-control' }
    .field
      = f.button :submit, "Sign up", class: 'ui blue submit button'
  = render "devise/shared/links"
