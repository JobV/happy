.session-box
  %h1 Forgot your password?
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'ui form' }) do |f|
    = f.error_notification
    .field
      = f.input :email, required: false, autofocus: true, class: 'form-control'
    .field
      = f.button :submit, "Send me reset password instructions", class: 'ui blue submit button'
  = render "devise/shared/links"
