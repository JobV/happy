.session-box
  %h1 Change your password
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'ui form' }) do |f|
    = f.error_notification
    = f.input :reset_password_token, as: :hidden
    = f.full_error :reset_password_token
    .field
      = f.input :password, label: "New password", required: false, autofocus: true, class: 'form-control'
    .field
      = f.input :password_confirmation, label: "Confirm your new password", required: false, class: 'form-control'
    .field
      = f.button :submit, "Change my password", class: 'ui blue submit button'
  = render "devise/shared/links"
