.header
  %h1 People
  = link_to 'New Person', new_person_path, class: 'btn btn-blue btn-lg'
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Last reply
      %th Average
      %th{:colspan => "3"}
  %tbody
    - @people.each do |person|
      %tr
        %td= person.full_name
        %td= person.last_response_grade
        %td= person.average_grade_last_3_responses
        %td= link_to 'Show', person
        %td= link_to 'Edit', edit_person_path(person)
        %td= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }
%br/
